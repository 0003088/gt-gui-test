#ifndef CPP_KDB_H
#define CPP_KDB_H

#include <string>
#include <key>
#include <keyset>

namespace ckdb {
#include <kdb.h>
}


namespace kdb {

class Key;
class KeySet;


/**
 * ckdb provides a singleton class for c++ access to kdb.
 * */
class Kdb
{
public:
	Kdb ();
	~Kdb ();
	
	Key & getKey (Key & toGet);
	//TODO: make toSet const
	void setKey (Key & toSet);

	KeySet & getKeys (KeySet & toGet, const std::string name, int options = 0);
	void setKeys (KeySet & toSet);
	
	/*std::string & get (std::string key);
	void set (std::string key, std::string value);*/
	
protected:
	/**You may use the KDBHandle in an inherited class*/
	ckdb::KDBHandle handle;
};

} // end of namespace kdb

#endif

