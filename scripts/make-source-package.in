#!/bin/sh

set +ex

git archive --prefix=elektra-${KDB_VERSION}/ --format=tar ${KDB_VERSION} | gzip > ${CMAKE_BINARY_DIR}/elektra-${KDB_VERSION}.tar.gz

hashsum ()
{
	echo -n "name: "
	basename `ls $1`

	echo -n "size: "
	ls -l $1 | awk '{print $5;}'

	echo -n "md5sum: "
	md5sum $1 | awk '{print $1;}'

	echo -n "sha1: "
	sha1sum $1 | awk '{print $1;}'

	echo -n "sha256: "
	sha256sum $1 | awk '{print $1;}'

	echo -n "sha512: "
	sha512sum $1 | awk '{print $1;}'
}

hashsum ${CMAKE_BINARY_DIR}/elektra-${KDB_VERSION}.tar.gz > ${CMAKE_BINARY_DIR}/elektra-${KDB_VERSION}.tar.gz.hashsum
